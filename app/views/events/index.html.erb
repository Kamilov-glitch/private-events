<section class="section">
  <div class="container">
    <h1 class="title is-2">Events</h1>
    <div class="columns">
      <div class="column has-background-warning">
        <h3 class="title is-4">These are the past events:</h3>
        <% Event.past_events.each do |event| %>
          <div class="box">
            <article class="media">
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong><%= event.name %> </strong><br/>
                    <small>Date: <%= event.date %></small><br/>
                    <small>Place: <%= event.place %></small>
                    <br />
                    By: <%= event.creator.username %>
                  </p>
                </div>
                  <nav class="level is-mobile">
                    <div class="level-left">
                      <%= link_to event, class: "level-item" do %>
                        <span class="icon-text has-text-info">
                          <span class="icon"><i class="fas fa-eye"></i></span>
                          <span>Show</span>
                        </span>
                      <% end %>
                      <% if current_user == event.creator %>
                        <%= link_to edit_event_path(event), class: "level-item" do %>
                          <span class="icon-text has-text-info">
                            <span class="icon"><i class="fas fa-wrench"></i></span>
                            <span>Edit</span>
                          </span>
                        <% end %>
                        <%= link_to event, method: :delete, data: { confirm: "Are you sure?" }, class: "level-item" do %>
                          <span class="icon-text has-text-info">
                            <span class="icon"><i class="fas fa-trash"></i></span>
                            <span>Delete</span>
                          </span>
                        <% end %>
                      <% end %>
                    </div>
                  </nav>
              </div>
            </article>
          </div>
        <% end %>
      </div>
      <div class="column has-background-success">
        <h3 class="title is-4">These are the upcoming events:</h3>
        <% Event.upcoming_events.each do |event| %>
          <div class="box">
            <article class="media">
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong><%= event.name %></strong><br/>
                    <small>Date: <%= event.date %></small><br/>
                    <small>Place: <%= event.place %></small>
                    <br />
                    By: <%= event.creator.username %>
                  </p>
                </div>
                  <nav class="level is-mobile">
                    <div class="level-left">
                      <%= link_to event, class: "level-item" do %>
                        <span class="icon-text has-text-info">
                          <span class="icon"><i class="fas fa-eye"></i></span>
                          <span>Show</span>
                        </span>
                      <% end %>
                      <% if current_user == event.creator %>
                        <%= link_to edit_event_path(event), class: "level-item" do %>
                          <span class="icon-text has-text-info">
                            <span class="icon"><i class="fas fa-wrench"></i></span>
                            <span>Edit</span>
                          </span>
                        <% end %>
                        <%= link_to event, method: :delete, data: { confirm: "Are you sure?" }, class: "level-item" do %>
                          <span class="icon-text has-text-info">
                            <span class="icon"><i class="fas fa-trash"></i></span>
                            <span>Delete</span>
                          </span>
                        <% end %>
                      <% end %>
                    </div>
                  </nav>
              </div>
            </article>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

