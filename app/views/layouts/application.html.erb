<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/4dbb07b465.js" crossorigin="anonymous"></script>
  </head>

  <body>
    
     <% if flash[:notice] %>
        <div class="alert">
          <div class="notification is-primary global-notification">
            <p class="notice"><%= notice %></p>
          </div>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert">
          <div class="notifiaction is-primary global-notification">
            <p class="alert"><%= alert %></p>
          </div>
        </div>
      <% end %>

      <nav class="navbar is-light">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <h1 class="title is-3 has-text-link" >Private Events</h1>
          <% end %>
        </div>
        <div class="navbar-menu">
          <div class="navbar-item">
            <div class="field is-grouped">
              <p class="control">
                <%= link_to "Events", root_path, class: "button" %>
              </p>
              <p class="control">
                <%= link_to "Users", users_path, class:"button" %>
              </p>
            </div>
          </div>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <% if user_signed_in? %>
                  <p class="control">
                    <%= link_to edit_user_registration_path, class: "button is-primary" do %>
                      <%= current_user.username %>
                    <% end %>
                  </p>
                  <p class="control">
                    <%= link_to "New Event", new_event_path, class:"button is-primary" %>
                  </p>
                  <p class="control">
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-danger" %>
                  </p>
                <% else %>
                  <p class="control">
                    <%= link_to "Sign In", new_user_session_path, class:"button is-light" %>
                  </p>
                  <p class="control">
                    <%= link_to "Sign Up", new_user_registration_path, class:"button is-primary" %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </nav>

    <%= yield %>
    <footer class="footer">
        <div class="content has-text-centered">
          <p>
            This website was made by <%= link_to "Kamilov-glitch", "https://github.com/Kamilov-glitch", target: "_blank" %>
          </p>
        </div>
      </footer>
  </body>
</html>
